{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@_components/*": ["./app/_components/*"],
      "@_hero/*": ["./app/_hero/*"],
      "@_portfolio/*": ["./app/_portfolio/*"],
      "@_projects/*": ["./app/_projects/*"],
      "@_showcase-components/*": ["./app/_showcase-components/*"],
      "@styles/*": ["./app/styles/*"]
    },
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext"
  },
  "exclude": ["node_modules", ".next", "out"],
  "include": ["app"]
}
